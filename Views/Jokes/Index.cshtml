@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@model IEnumerable<JokesWebApp.Models.Joke>


@{
    ViewData["Title"] = "Index";

    bool isSearch = ViewData["IsSearch"] as bool? ?? false;
    string searchPhrase = ViewData["SearchPhrase"] as string ?? "";
    int resultCount = ViewData["ResultCount"] as int? ?? (Model?.Count() ?? 0);
}

<h1>Index</h1>

    @if(isSearch){
        if(resultCount == 0){
            <div class="alert alert-warning">No jokes found for "
                <strong>@searchPhrase</strong>"
            </div>
            <ul>
                @if(!(ViewData["HasQuestionMatch"] as bool? ??false)){
                    <li>No Jokes For This Question.</li>
                }
                @if(!(ViewData["HasAnswerMatch"] as bool? ??false)){
                    <li>No jokes found with this answer.</li>
                }
                @if(!(ViewData["HasUserMatch"] as bool? ??false)){
                    <li>No jokes found from this user.</li>
                }
            </ul>
        }
        else{
            <div class="alert alert-info">Showing @resultCount result(s)
                for "<strong>@searchPhrase</strong>"
            </div>
        }
    }

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JokeQuestion)
            </th>
            <th>Created By</th>
            <th>Created On</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JokeQuestion)
            </td>
            <td>
                @item.Creator?.Email
            </td>
            <td>@item.CreatedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")</td>
            <td>
                
                <a asp-action="Details" asp-route-id="@item.id">Details</a>

            @if (User.CanEditJoke(item)){
                <span> | </span>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a>
            }
            @if (User.CanDeleteJoke(item)){
                <span> | </span>
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            }
            </td>
        </tr>
}
    </tbody>
</table>
