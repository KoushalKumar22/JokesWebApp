@model JokesWebApp.Models.Joke
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Joke</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.JokeQuestion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JokeQuestion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.JokeAnswer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JokeAnswer)
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated &&
        (Model.CreatorId == UserManager.GetUserId(User) || User.IsInRole("Admin")))
    {
        <a asp-action="Edit" asp-route-id="@Model.id">Edit</a>
        <span> | </span>
    }
    <a asp-action="Index">Back to List</a>
</div>
